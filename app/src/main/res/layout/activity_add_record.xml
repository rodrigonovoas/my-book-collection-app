<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.addRecord.AddRecordActivity">

    <TextView
        android:id="@+id/tv_selected_book"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Selected book: " />

    <TextView
        android:id="@+id/tv_spent_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Spent Time"
        android:layout_below="@+id/tv_selected_book"/>

    <EditText
        android:id="@+id/edt_spent_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_spent_time"
        android:layout_marginTop="16dp"
        android:inputType="number" />

    <Button
        android:id="@+id/btn_add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edt_spent_time"
        android:text="ADD"/>

</RelativeLayout>